# FlashBlade Storage Configuration
FLASHBLADE_PATH=/mnt/flashblade
CPU_VOLUME_PATH=/mnt/cpu-fb
GPU_VOLUME_PATH=/mnt/gpu-fb

# Primary and Secondary Output Paths for Data Generation
OUTPUT_PATH=/mnt/cpu-fb/raw
OUTPUT_PATH_SECONDARY=/mnt/gpu-fb/raw

# Namespace and Modes
NAMESPACE=fraud-pipeline
CONTINUOUS_MODE=true
CONFIG_MODE=dual

# Resources
NUM_WORKERS=4
CHUNK_SIZE=50000
GENERATION_RATE=50000

# Pure1/Prometheus (Optional)
PURE_SERVER=false
PROMETHEUS_URL=http://prometheus-service:9090
